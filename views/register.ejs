<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Registrarse</title>
  <link rel="stylesheet" href="resources/css/stylez.css">
</head>

<body>
  <div class="container">
    <div class="col-xs-12 col-sm-6 col-md-8">
      <section>
        <div class="center"><br>
          <center><img src="resources/images/klassy-logo.png" height="" alt=""></center>
          <h3>Registrarse</h3>
      
          <form action="register" method="post">
      
            <div class="txt_field">
              <input type="text" name="user" required>
              <span></span>
              <label for="user">Usuario</label>
            </div>

            <div class="txt_field">
              <input type="text" name="name" required>
              <span></span>
              <label for="name">Nombre Completo</label>
            </div>
      
      
            <div class="txt_field">
              <input type="password" name="pass" required>
              <span></span>
              <label for="pass">Contraseña</label>
            </div>
      
            <input type="submit" value="Registrese">
            <div class="signup_link">
              ¿Ya tiene una cuenta? <a href="login">Iniciar sesión</a>
            </div>
      
          </form>
        </div>
  
      </section>
    </div>
  </div>
</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% if(typeof alert != "undefined"){ %>
<script>
    Swal.fire({
        title:'<%= alertTitle %>',
        text:'<%= alertMessage %>',
        icon:' <%= alertIcon %>',
        showConfirmButton:<%= showConfirmButton %>,
        timer:<%= timer %>
    }).then(()=>{
        window.location='/<%= ruta %>'
    })
</script>
<% } %>
</html>
